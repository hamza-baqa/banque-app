@page "/historique"
@page "/historique/{iban}"
@attribute [Authorize]
@inject IVirementService VirementService
@inject ICompteService CompteService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Historique des Transactions - EuroBank</PageTitle>

<div class="historique-page">
    <!-- En-tête de la page -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h3 mb-2">
                    <i class="fas fa-history me-2 text-primary"></i>
                    Historique des Transactions
                </h1>
                <p class="text-muted mb-0">Consultez l'ensemble de vos opérations bancaires</p>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="d-flex justify-content-md-end gap-2 mt-3 mt-md-0">
                    <button class="btn btn-outline-primary" @onclick="ExporterPDF" disabled="@(!transactions.Any())">
                        <i class="fas fa-file-pdf me-1"></i> Exporter PDF
                    </button>
                    <button class="btn btn-outline-success" @onclick="ExporterExcel" disabled="@(!transactions.Any())">
                        <i class="fas fa-file-excel me-1"></i> Exporter Excel
                    </button>
                    <button class="btn btn-primary" @onclick="Actualiser">
                        <i class="fas fa-sync-alt me-1"></i> Actualiser
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques et résumé -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon bg-primary-subtle text-primary mb-2">
                        <i class="fas fa-exchange-alt fa-2x"></i>
                    </div>
                    <h6 class="text-muted mb-1">Total transactions</h6>
                    <h3 class="mb-0 text-primary">@totalTransactions</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon bg-success-subtle text-success mb-2">
                        <i class="fas fa-arrow-down fa-2x"></i>
                    </div>
                    <h6 class="text-muted mb-1">Total crédits</h6>
                    <h3 class="mb-0 text-success">+@totalCredits.ToString("N2") €</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon bg-danger-subtle text-danger mb-2">
                        <i class="fas fa-arrow-up fa-2x"></i>
                    </div>
                    <h6 class="text-muted mb-1">Total débits</h6>
                    <h3 class="mb-0 text-danger">-@totalDebits.ToString("N2") €</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon bg-info-subtle text-info mb-2">
                        <i class="fas fa-balance-scale fa-2x"></i>
                    </div>
                    <h6 class="text-muted mb-1">Solde net</h6>
                    <h3 class="mb-0 @(soldeNet >= 0 ? "text-success" : "text-danger")">
                        @(soldeNet >= 0 ? "+" : "")@soldeNet.ToString("N2") €
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres avancés -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-filter me-2 text-primary"></i>
                    Filtres de recherche
                </h5>
                <button class="btn btn-sm btn-link text-decoration-none" @onclick="ReinitialiserFiltres">
                    <i class="fas fa-redo me-1"></i> Réinitialiser
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <!-- Compte -->
                <div class="col-md-3">
                    <label class="form-label">Compte</label>
                    <select class="form-select" @bind="compteSelectionne" @bind:after="AppliquerFiltres">
                        <option value="">Tous les comptes</option>
                        @foreach (var compte in comptes)
                        {
                            <option value="@compte.Iban">@compte.Intitule</option>
                        }
                    </select>
                </div>

                <!-- Date de début -->
                <div class="col-md-3">
                    <label class="form-label">Date de début</label>
                    <input type="date"
                           class="form-control"
                           @bind="dateDebut"
                           @bind:after="AppliquerFiltres"
                           max="@DateTime.Today.ToString("yyyy-MM-dd")">
                </div>

                <!-- Date de fin -->
                <div class="col-md-3">
                    <label class="form-label">Date de fin</label>
                    <input type="date"
                           class="form-control"
                           @bind="dateFin"
                           @bind:after="AppliquerFiltres"
                           max="@DateTime.Today.ToString("yyyy-MM-dd")">
                </div>

                <!-- Type d'opération -->
                <div class="col-md-3">
                    <label class="form-label">Type d'opération</label>
                    <select class="form-select" @bind="typeOperation" @bind:after="AppliquerFiltres">
                        <option value="">Tous les types</option>
                        <option value="VIREMENT_EMIS">Virement émis</option>
                        <option value="VIREMENT_RECU">Virement reçu</option>
                        <option value="VIREMENT_SEPA">Virement SEPA</option>
                        <option value="VIREMENT_INSTANTANE">Virement instantané</option>
                        <option value="PRELEVEMENT">Prélèvement</option>
                        <option value="PAIEMENT_CARTE">Paiement carte</option>
                        <option value="RETRAIT_DAB">Retrait DAB</option>
                        <option value="DEPOT_ESPECES">Dépôt espèces</option>
                        <option value="DEPOT_CHEQUE">Dépôt chèque</option>
                        <option value="FRAIS_BANCAIRES">Frais bancaires</option>
                    </select>
                </div>

                <!-- Recherche par mot-clé -->
                <div class="col-md-6">
                    <label class="form-label">Recherche</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text"
                               class="form-control border-start-0"
                               placeholder="Libellé, bénéficiaire, référence..."
                               @bind="motCle"
                               @bind:event="oninput"
                               @onkeyup="AppliquerFiltres">
                    </div>
                </div>

                <!-- Montant min -->
                <div class="col-md-3">
                    <label class="form-label">Montant minimum</label>
                    <div class="input-group">
                        <input type="number"
                               class="form-control"
                               @bind="montantMin"
                               @bind:after="AppliquerFiltres"
                               min="0"
                               step="0.01"
                               placeholder="0.00">
                        <span class="input-group-text">€</span>
                    </div>
                </div>

                <!-- Montant max -->
                <div class="col-md-3">
                    <label class="form-label">Montant maximum</label>
                    <div class="input-group">
                        <input type="number"
                               class="form-control"
                               @bind="montantMax"
                               @bind:after="AppliquerFiltres"
                               min="0"
                               step="0.01"
                               placeholder="0.00">
                        <span class="input-group-text">€</span>
                    </div>
                </div>
            </div>

            <!-- Filtres rapides -->
            <div class="mt-3">
                <label class="form-label">Périodes rapides:</label>
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn btn-sm btn-outline-primary" @onclick='() => AppliquerPeriodeRapide(7)'>
                        7 derniers jours
                    </button>
                    <button class="btn btn-sm btn-outline-primary" @onclick='() => AppliquerPeriodeRapide(30)'>
                        30 derniers jours
                    </button>
                    <button class="btn btn-sm btn-outline-primary" @onclick='() => AppliquerPeriodeRapide(90)'>
                        3 derniers mois
                    </button>
                    <button class="btn btn-sm btn-outline-primary" @onclick="AppliquerMoisEnCours">
                        Mois en cours
                    </button>
                    <button class="btn btn-sm btn-outline-primary" @onclick="AppliquerMoisPrecedent">
                        Mois précédent
                    </button>
                    <button class="btn btn-sm btn-outline-primary" @onclick="AppliquerAnneeEnCours">
                        Année en cours
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Options d'affichage -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body py-2">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center gap-3">
                        <span class="text-muted small">Affichage:</span>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button"
                                    class="btn @(vueActuelle == "liste" ? "btn-primary" : "btn-outline-primary")"
                                    @onclick='() => vueActuelle = "liste"'>
                                <i class="fas fa-list"></i> Liste
                            </button>
                            <button type="button"
                                    class="btn @(vueActuelle == "cartes" ? "btn-primary" : "btn-outline-primary")"
                                    @onclick='() => vueActuelle = "cartes"'>
                                <i class="fas fa-th"></i> Cartes
                            </button>
                            <button type="button"
                                    class="btn @(vueActuelle == "graphique" ? "btn-primary" : "btn-outline-primary")"
                                    @onclick='() => vueActuelle = "graphique"'>
                                <i class="fas fa-chart-bar"></i> Graphique
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-2 mt-md-0">
                    <div class="d-flex justify-content-md-end align-items-center gap-3">
                        <span class="text-muted small">Trier par:</span>
                        <select class="form-select form-select-sm" style="width: auto;" @bind="triActuel" @bind:after="AppliquerTri">
                            <option value="date-desc">Date (plus récent)</option>
                            <option value="date-asc">Date (plus ancien)</option>
                            <option value="montant-desc">Montant (décroissant)</option>
                            <option value="montant-asc">Montant (croissant)</option>
                            <option value="libelle">Libellé (A-Z)</option>
                        </select>
                        <select class="form-select form-select-sm" style="width: auto;" @bind="taillePage" @bind:after="AppliquerFiltres">
                            <option value="10">10 par page</option>
                            <option value="20">20 par page</option>
                            <option value="50">50 par page</option>
                            <option value="100">100 par page</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Affichage des transactions -->
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Chargement...</span>
            </div>
            <p class="text-muted mt-3">Chargement des transactions...</p>
        </div>
    }
    else if (!transactionsFiltrees.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                <h5>Aucune transaction trouvée</h5>
                <p class="text-muted">Aucune transaction ne correspond à vos critères de recherche</p>
                <button class="btn btn-primary" @onclick="ReinitialiserFiltres">
                    <i class="fas fa-redo me-2"></i> Réinitialiser les filtres
                </button>
            </div>
        </div>
    }
    else
    {
        @if (vueActuelle == "liste")
        {
            <!-- Vue Liste -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0 transactions-table">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th style="width: 100px;">Date</th>
                                    <th style="width: 120px;">Type</th>
                                    <th>Libellé</th>
                                    <th style="width: 150px;">Bénéficiaire</th>
                                    <th style="width: 120px;" class="text-end">Montant</th>
                                    <th style="width: 120px;" class="text-end">Solde après</th>
                                    <th style="width: 80px;" class="text-center">Statut</th>
                                    <th style="width: 60px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in transactionsPaginees)
                                {
                                    <tr class="transaction-row" @onclick='() => OuvrirDetailsTransaction(transaction)'>
                                        <td>
                                            <div class="fw-semibold small">@transaction.DateOperation.ToString("dd/MM/yyyy")</div>
                                            <small class="text-muted">@transaction.DateOperation.ToString("HH:mm")</small>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary-subtle text-secondary">
                                                <i class="fas fa-@GetTypeIcon(transaction.TypeOperation) me-1"></i>
                                                @GetTypeLibelleCourt(transaction.TypeOperation)
                                            </span>
                                        </td>
                                        <td>
                                            <div class="fw-semibold">@transaction.Libelle</div>
                                            @if (!string.IsNullOrEmpty(transaction.LibelleComplement))
                                            {
                                                <small class="text-muted">@transaction.LibelleComplement</small>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(transaction.NomBeneficiaire))
                                            {
                                                <span class="small">@transaction.NomBeneficiaire</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">-</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold fs-6 @(transaction.IsCredit ? "text-success" : "text-danger")">
                                                @transaction.MontantFormate
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <span class="small text-muted">@transaction.SoldeApres.ToString("N2") €</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-@GetStatutColor(transaction.Statut)">
                                                @GetStatutLibelle(transaction.Statut)
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-link text-primary"
                                                    @onclick:stopPropagation="true"
                                                    @onclick='() => OuvrirDetailsTransaction(transaction)'>
                                                <i class="fas fa-chevron-right"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else if (vueActuelle == "cartes")
        {
            <!-- Vue Cartes -->
            <div class="row g-3">
                @foreach (var transaction in transactionsPaginees)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm transaction-card h-100" @onclick='() => OuvrirDetailsTransaction(transaction)'>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="transaction-icon @(transaction.IsCredit ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">
                                        <i class="fas fa-@GetTypeIcon(transaction.TypeOperation)"></i>
                                    </div>
                                    <span class="badge bg-@GetStatutColor(transaction.Statut)">
                                        @GetStatutLibelle(transaction.Statut)
                                    </span>
                                </div>
                                <h6 class="mb-2">@transaction.Libelle</h6>
                                <p class="text-muted small mb-2">
                                    @transaction.TypeOperationLibelle
                                </p>
                                @if (!string.IsNullOrEmpty(transaction.NomBeneficiaire))
                                {
                                    <p class="text-muted small mb-2">
                                        <i class="fas fa-user me-1"></i>@transaction.NomBeneficiaire
                                    </p>
                                }
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        @transaction.DateOperation.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                    <h5 class="mb-0 @(transaction.IsCredit ? "text-success" : "text-danger")">
                                        @transaction.MontantFormate
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else if (vueActuelle == "graphique")
        {
            <!-- Vue Graphique -->
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-line me-2 text-primary"></i>
                                Évolution du solde
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-placeholder">
                                <i class="fas fa-chart-area fa-4x text-muted mb-3"></i>
                                <p class="text-muted">Graphique d'évolution du solde</p>
                                <small class="text-muted">(Nécessite une bibliothèque de graphiques comme Chart.js)</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-pie me-2 text-primary"></i>
                                Répartition
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-placeholder-small">
                                <i class="fas fa-chart-pie fa-3x text-muted mb-2"></i>
                                <p class="small text-muted mb-0">Répartition par type</p>
                            </div>
                        </div>
                    </div>
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Top catégories</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                @foreach (var type in transactionsFiltrees.GroupBy(t => t.TypeOperation).OrderByDescending(g => g.Count()).Take(5))
                                {
                                    <li class="mb-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="small">@GetTypeLibelle(type.Key)</span>
                                            <span class="badge bg-primary">@type.Count()</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body py-3">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <p class="text-muted small mb-0">
                                Affichage de @((pageActuelle * taillePage) + 1) à @Math.Min((pageActuelle + 1) * taillePage, transactionsFiltrees.Count)
                                sur @transactionsFiltrees.Count transactions
                            </p>
                        </div>
                        <div class="col-md-6">
                            <nav>
                                <ul class="pagination pagination-sm justify-content-md-end mb-0">
                                    <li class="page-item @(pageActuelle == 0 ? "disabled" : "")">
                                        <button class="page-link" @onclick='() => ChangerPage(0)' disabled="@(pageActuelle == 0)">
                                            <i class="fas fa-angle-double-left"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(pageActuelle == 0 ? "disabled" : "")">
                                        <button class="page-link" @onclick='() => ChangerPage(pageActuelle - 1)' disabled="@(pageActuelle == 0)">
                                            <i class="fas fa-angle-left"></i>
                                        </button>
                                    </li>

                                    @for (int i = Math.Max(0, pageActuelle - 2); i <= Math.Min(totalPages - 1, pageActuelle + 2); i++)
                                    {
                                        var page = i;
                                        <li class="page-item @(page == pageActuelle ? "active" : "")">
                                            <button class="page-link" @onclick='() => ChangerPage(page)'>
                                                @(page + 1)
                                            </button>
                                        </li>
                                    }

                                    <li class="page-item @(pageActuelle >= totalPages - 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick='() => ChangerPage(pageActuelle + 1)' disabled="@(pageActuelle >= totalPages - 1)">
                                            <i class="fas fa-angle-right"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(pageActuelle >= totalPages - 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick='() => ChangerPage(totalPages - 1)' disabled="@(pageActuelle >= totalPages - 1)">
                                            <i class="fas fa-angle-double-right"></i>
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Modal Détails Transaction -->
@if (afficherModalDetails && transactionSelectionnee != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-receipt me-2"></i>
                        Détails de la transaction
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="FermerModalDetails"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="small text-muted">Référence</label>
                                <p class="fw-semibold mb-0">@transactionSelectionnee.Reference</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="small text-muted">Statut</label>
                                <p class="mb-0">
                                    <span class="badge bg-@GetStatutColor(transactionSelectionnee.Statut)">
                                        @GetStatutLibelle(transactionSelectionnee.Statut)
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="col-12">
                            <hr>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="small text-muted">Type d'opération</label>
                                <p class="mb-0">@transactionSelectionnee.TypeOperationLibelle</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="small text-muted">Nature</label>
                                <p class="mb-0">@(transactionSelectionnee.NatureOperation ?? "-")</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="detail-item">
                                <label class="small text-muted">Libellé</label>
                                <p class="fw-semibold mb-0">@transactionSelectionnee.Libelle</p>
                                @if (!string.IsNullOrEmpty(transactionSelectionnee.LibelleComplement))
                                {
                                    <p class="text-muted small mb-0">@transactionSelectionnee.LibelleComplement</p>
                                }
                            </div>
                        </div>
                        <div class="col-12">
                            <hr>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="small text-muted">Date d'opération</label>
                                <p class="mb-0">@transactionSelectionnee.DateOperation.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <label class="small text-muted">Date de valeur</label>
                                <p class="mb-0">@transactionSelectionnee.DateValeur.ToString("dd/MM/yyyy")</p>
