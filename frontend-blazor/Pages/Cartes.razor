            {
                nouveauPlafondPaiement = carteSelectionnee.PlafondPaiementJour;
                nouveauPlafondRetrait = carteSelectionnee.PlafondRetraitJour;
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Erreur lors du chargement des détails: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ModifierOption(string optionName, bool value)
    {
        if (carteSelectionnee == null) return;

        try
        {
            var options = new CarteOptionsRequest();

            switch (optionName)
            {
                case nameof(CarteDto.PaiementEtrangerActif):
                    options.PaiementEtrangerActif = value;
                    break;
                case nameof(CarteDto.PaiementInternetActif):
                    options.PaiementInternetActif = value;
                    break;
                case nameof(CarteDto.SansContactActif):
                    options.SansContactActif = value;
                    break;
            }

            var result = await CarteService.ModifierOptionsAsync(carteSelectionnee.Id, options);

            if (result != null)
            {
                carteSelectionnee = result;
                ToastService.ShowSuccess("Option modifiée avec succès");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Erreur: {ex.Message}");
            await ChargerDetailsCarte(carteSelectionnee.Id);
        }
    }

