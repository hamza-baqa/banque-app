@page "/cartes"
@page "/cartes/{id:long}"
@attribute [Authorize]
@inject ICarteService CarteService
@inject ICompteService CompteService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Mes Cartes - EuroBank</PageTitle>

<div class="cartes-page">
    <!-- En-tête de la page -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h3 mb-2">
                    <i class="fas fa-credit-card me-2 text-primary"></i>
                    Mes Cartes Bancaires
                </h1>
                <p class="text-muted mb-0">Gérez vos cartes et leurs options de sécurité</p>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="d-flex justify-content-md-end gap-2 mt-3 mt-md-0">
                    <button class="btn btn-outline-primary" @onclick="RefreshCartes">
                        <i class="fas fa-sync-alt me-1"></i> Actualiser
                    </button>
                    <button class="btn btn-danger" @onclick="OuvrirModalOpposition">
                        <i class="fas fa-ban me-1"></i> Faire opposition
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (Id.HasValue)
    {
        <!-- Vue détaillée d'une carte spécifique -->
        @if (carteSelectionnee == null && isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Chargement...</span>
                </div>
            </div>
        }
        else if (carteSelectionnee != null)
        {
            <div class="row g-4">
                <!-- Carte visuelle et informations principales -->
                <div class="col-lg-8">
                    <!-- Représentation visuelle de la carte -->
                    <div class="card border-0 shadow-lg mb-4">
                        <div class="card-body p-0">
                            <div class="credit-card @GetCardClass(carteSelectionnee.TypeCarte)">
                                <div class="card-overlay"></div>
                                <div class="card-content">
                                    <div class="card-header-section d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="card-chip mb-3">
                                                <i class="fas fa-microchip fa-2x"></i>
                                            </div>
                                            <div class="card-network">
                                                <i class="fab fa-cc-@GetNetworkIcon(carteSelectionnee.Reseau) fa-3x"></i>
                                            </div>
                                        </div>
                                        <div class="card-status">
                                            <span class="badge bg-@(carteSelectionnee.IsActive ? "success" : "danger")">
                                                @carteSelectionnee.StatutLibelle
                                            </span>
                                        </div>
                                    </div>
                                    <div class="card-number mt-4">
                                        <h4 class="text-white mb-0 letter-spacing">@carteSelectionnee.NumeroCarteMasque</h4>
                                    </div>
                                    <div class="card-footer-section d-flex justify-content-between align-items-end mt-4">
                                        <div>
                                            <small class="text-white-50 d-block">TITULAIRE</small>
                                            <p class="text-white mb-0 fw-semibold">@carteSelectionnee.Titulaire.ToUpper()</p>
                                        </div>
                                        <div>
                                            <small class="text-white-50 d-block">EXPIRE FIN</small>
                                            <p class="text-white mb-0 fw-semibold">@carteSelectionnee.DateExpiration.ToString("MM/yyyy")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Informations détaillées -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle me-2 text-primary"></i>
                                Informations de la carte
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <small class="text-muted d-block mb-1">Type de carte</small>
                                        <p class="mb-0 fw-semibold">@carteSelectionnee.TypeCarteLibelle</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <small class="text-muted d-block mb-1">Réseau</small>
                                        <p class="mb-0 fw-semibold">@carteSelectionnee.Reseau</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <small class="text-muted d-block mb-1">Plafond paiement/jour</small>
                                        <p class="mb-0 fw-semibold text-primary">@carteSelectionnee.PlafondPaiementJour.ToString("N2") €</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <small class="text-muted d-block mb-1">Plafond retrait/jour</small>
                                        <p class="mb-0 fw-semibold text-primary">@carteSelectionnee.PlafondRetraitJour.ToString("N2") €</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Options de sécurité -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-shield-alt me-2 text-success"></i>
                                Options de sécurité
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="security-option">
                                        <div class="d-flex justify-content-between align-items-center p-3 border rounded">
                                            <div>
                                                <h6 class="mb-1">
                                                    <i class="fas fa-globe me-2 text-info"></i>
                                                    Paiements à l'étranger
                                                </h6>
                                                <small class="text-muted">Autoriser les paiements hors zone euro</small>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       id="paiementEtranger"
                                                       checked="@carteSelectionnee.PaiementEtrangerActif"
                                                       @onchange="(e) => ModifierOption(nameof(carteSelectionnee.PaiementEtrangerActif), (bool)e.Value!)"
                                                       disabled="@(!carteSelectionnee.IsActive)">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="security-option">
                                        <div class="d-flex justify-content-between align-items-center p-3 border rounded">
                                            <div>
                                                <h6 class="mb-1">
                                                    <i class="fas fa-shopping-cart me-2 text-info"></i>
                                                    Paiements internet
                                                </h6>
                                                <small class="text-muted">Autoriser les achats en ligne</small>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       id="paiementInternet"
                                                       checked="@carteSelectionnee.PaiementInternetActif"
                                                       @onchange="(e) => ModifierOption(nameof(carteSelectionnee.PaiementInternetActif), (bool)e.Value!)"
                                                       disabled="@(!carteSelectionnee.IsActive)">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="security-option">
                                        <div class="d-flex justify-content-between align-items-center p-3 border rounded">
                                            <div>
                                                <h6 class="mb-1">
                                                    <i class="fas fa-broadcast-tower me-2 text-info"></i>
                                                    Paiement sans contact
                                                </h6>
                                                <small class="text-muted">Activer le paiement NFC</small>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       id="sansContact"
                                                       checked="@carteSelectionnee.SansContactActif"
                                                       @onchange="(e) => ModifierOption(nameof(carteSelectionnee.SansContactActif), (bool)e.Value!)"
                                                       disabled="@(!carteSelectionnee.IsActive)">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modifier les plafonds -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-sliders-h me-2 text-warning"></i>
                                Modifier les plafonds
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Plafond de paiement journalier</label>
                                    <div class="input-group">
                                        <input type="number"
                                               class="form-control"
                                               @bind="nouveauPlafondPaiement"
                                               min="0"
                                               max="5000"
                                               step="50"
                                               disabled="@(!carteSelectionnee.IsActive)">
                                        <span class="input-group-text">€</span>
                                    </div>
                                    <small class="text-muted">Maximum: 5 000 €</small>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Plafond de retrait journalier</label>
                                    <div class="input-group">
                                        <input type="number"
                                               class="form-control"
                                               @bind="nouveauPlafondRetrait"
                                               min="0"
                                               max="1000"
                                               step="50"
                                               disabled="@(!carteSelectionnee.IsActive)">
                                        <span class="input-group-text">€</span>
                                    </div>
                                    <small class="text-muted">Maximum: 1 000 €</small>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary"
                                            @onclick="ModifierPlafonds"
                                            disabled="@(!carteSelectionnee.IsActive || isSaving)">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="fas fa-save me-1"></i> Enregistrer les modifications
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions et alertes -->
                <div class="col-lg-4">
                    <!-- Actions rapides -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-danger text-white border-0 py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Actions urgentes
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                @if (carteSelectionnee.IsActive)
                                {
                                    <button class="btn btn-danger" @onclick="OuvrirModalOpposition">
                                        <i class="fas fa-ban me-2"></i> Faire opposition
                                    </button>
                                    <button class="btn btn-warning" @onclick="BloquerCarte">
                                        <i class="fas fa-lock me-2"></i> Bloquer temporairement
                                    </button>
                                }
                                else if (carteSelectionnee.Statut == "BLOQUEE")
                                {
                                    <button class="btn btn-success" @onclick="DebloquerCarte">
                                        <i class="fas fa-unlock me-2"></i> Débloquer la carte
                                    </button>
                                }
                                <button class="btn btn-outline-secondary" @onclick='() => Navigation.NavigateTo("/cartes")'>
                                    <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Alertes de sécurité -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-bell me-2 text-warning"></i>
                                Alertes
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (carteSelectionnee.IsExpired)
                            {
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    <strong>Carte expirée</strong>
                                    <p class="small mb-0">Cette carte a expiré le @carteSelectionnee.DateExpiration.ToString("dd/MM/yyyy")</p>
                                </div>
                            }
                            else if (carteSelectionnee.DateExpiration < DateTime.Today.AddMonths(2))
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Expire bientôt</strong>
                                    <p class="small mb-0">Cette carte expire le @carteSelectionnee.DateExpiration.ToString("dd/MM/yyyy")</p>
                                </div>
                            }
                            @if (carteSelectionnee.Opposition)
                            {
                                <div class="alert alert-danger">
                                    <i class="fas fa-ban me-2"></i>
                                    <strong>Opposition en cours</strong>
                                    <p class="small mb-0">Cette carte a fait l'objet d'une opposition</p>
                                </div>
                            }
                            @if (!carteSelectionnee.IsActive && !carteSelectionnee.Opposition)
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Carte bloquée</strong>
                                    <p class="small mb-0">Vous pouvez la débloquer à tout moment</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Conseils de sécurité -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-lightbulb me-2 text-info"></i>
                                Conseils
                            </h5>
                        </div>
                        <div class="card-body">
                            <ul class="small mb-0 ps-3">
                                <li class="mb-2">Ne communiquez jamais votre code PIN</li>
                                <li class="mb-2">Activez les notifications par SMS</li>
                                <li class="mb-2">Vérifiez régulièrement vos transactions</li>
                                <li class="mb-2">En cas de perte, faites opposition immédiatement</li>
                                <li class="mb-0">Protégez votre carte des champs magnétiques</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Vue liste de toutes les cartes -->
        <div class="row mb-4">
            <!-- Statistiques -->
            <div class="col-12 mb-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-credit-card fa-2x text-primary mb-2"></i>
                                <h6 class="text-muted mb-1">Total cartes</h6>
                                <h3 class="mb-0 text-primary">@cartes.Count</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                <h6 class="text-muted mb-1">Cartes actives</h6>
                                <h3 class="mb-0 text-success">@cartesActives</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-lock fa-2x text-warning mb-2"></i>
                                <h6 class="text-muted mb-1">Bloquées</h6>
                                <h3 class="mb-0 text-warning">@cartesBloquees</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-calendar-times fa-2x text-danger mb-2"></i>
                                <h6 class="text-muted mb-1">Expirées</h6>
                                <h3 class="mb-0 text-danger">@cartesExpirees</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (isLoading)
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Chargement...</span>
                        </div>
                    </div>
                </div>
            }
            else if (!cartes.Any())
            {
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-credit-card fa-4x text-muted mb-3"></i>
                            <h5>Aucune carte bancaire</h5>
                            <p class="text-muted">Vous n'avez pas encore de carte bancaire associée à vos comptes</p>
                            <button class="btn btn-primary" disabled>
                                <i class="fas fa-plus me-2"></i> Commander une carte
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-12">
                    <div class="row g-4">
                        @foreach (var carte in cartes)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card border-0 shadow-sm carte-item h-100" @onclick='() => VoirDetailsCarte(carte.Id)'>
                                    <div class="card-body p-0">
                                        <!-- Mini représentation de la carte -->
                                        <div class="mini-credit-card @GetCardClass(carte.TypeCarte)">
                                            <div class="card-overlay-mini"></div>
                                            <div class="mini-card-content">
                                                <div class="d-flex justify-content-between align-items-start mb-3">
                                                    <div class="mini-card-chip">
                                                        <i class="fas fa-microchip"></i>
                                                    </div>
                                                    <span class="badge bg-@(carte.IsActive ? "success" : "danger")">
                                                        @carte.StatutLibelle
                                                    </span>
                                                </div>
                                                <div class="mini-card-number mb-3">
                                                    <small class="text-white">@carte.NumeroCarteMasque</small>
                                                </div>
                                                <div class="d-flex justify-content-between align-items-end">
                                                    <div>
                                                        <small class="text-white-50 d-block" style="font-size: 0.65rem;">TITULAIRE</small>
                                                        <small class="text-white fw-semibold">@carte.Titulaire.ToUpper()</small>
                                                    </div>
                                                    <div class="mini-card-network">
                                                        <i class="fab fa-cc-@GetNetworkIcon(carte.Reseau)"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Informations supplémentaires -->
                                        <div class="p-3">
                                            <h6 class="mb-2">@carte.TypeCarteLibelle</h6>
                                            <div class="d-flex justify-content-between text-muted small mb-2">
                                                <span><i class="fas fa-calendar me-1"></i> Expire: @carte.DateExpiration.ToString("MM/yyyy")</span>
                                            </div>
                                            <div class="d-flex gap-2 flex-wrap">
                                                @if (carte.PaiementInternetActif)
                                                {
                                                    <span class="badge bg-info-subtle text-info">
                                                        <i class="fas fa-shopping-cart me-1"></i> Internet
                                                    </span>
                                                }
                                                @if (carte.SansContactActif)
                                                {
                                                    <span class="badge bg-success-subtle text-success">
                                                        <i class="fas fa-broadcast-tower me-1"></i> Sans contact
                                                    </span>
                                                }
                                                @if (carte.PaiementEtrangerActif)
                                                {
                                                    <span class="badge bg-warning-subtle text-warning">
                                                        <i class="fas fa-globe me-1"></i> Étranger
                                                    </span>
                                                }
                                            </div>
                                            <div class="mt-3 d-grid">
                                                <button class="btn btn-sm btn-outline-primary" @onclick:stopPropagation="true" @onclick='() => VoirDetailsCarte(carte.Id)'>
                                                    <i class="fas fa-cog me-1"></i> Gérer la carte
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Modal Opposition -->
@if (afficherModalOpposition)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-ban me-2"></i>
                        Faire opposition
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="FermerModalOpposition"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Attention !</strong> Cette action est irréversible. Une nouvelle carte vous sera envoyée.
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Motif de l'opposition *</label>
                        <select class="form-select" @bind="motifOpposition">
                            <option value="">Sélectionnez un motif</option>
                            <option value="PERTE">Perte de la carte</option>
                            <option value="VOL">Vol de la carte</option>
                            <option value="FRAUDE">Utilisation frauduleuse</option>
                            <option value="DETERIORATION">Carte détériorée</option>
                            <option value="AUTRE">Autre motif</option>
                        </select>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="commanderNouvelle" @bind="commanderNouvelleCarte">
                        <label class="form-check-label" for="commanderNouvelle">
                            Commander automatiquement une nouvelle carte (gratuit)
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="FermerModalOpposition">Annuler</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmerOpposition" disabled="@(string.IsNullOrEmpty(motifOpposition) || isSaving)">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="fas fa-check me-1"></i> Confirmer l'opposition
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public long? Id { get; set; }

    private List<CarteDto> cartes = new();
    private CarteDto? carteSelectionnee;

    private int cartesActives = 0;
    private int cartesBloquees = 0;
    private int cartesExpirees = 0;

    private bool isLoading = true;
    private bool isSaving = false;

    private decimal nouveauPlafondPaiement;
    private decimal nouveauPlafondRetrait;

    private bool afficherModalOpposition = false;
    private string motifOpposition = string.Empty;
    private bool commanderNouvelleCarte = true;

    private long clientId = 1;

    protected override async Task OnInitializedAsync()
    {
        await ChargerCartes();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Id.HasValue)
        {
            await ChargerDetailsCarte(Id.Value);
        }
    }

    private async Task ChargerCartes()
    {
        try
        {
            isLoading = true;

            // Charger tous les comptes du client
            var comptes = await CompteService.GetComptesClientAsync(clientId);

            // Charger les cartes pour chaque compte
            cartes.Clear();
            foreach (var compte in comptes)
            {
                var cartesCompte = await CarteService.GetCartesCompteAsync(compte.Id);
                cartes.AddRange(cartesCompte);
            }

            // Calculer les statistiques
            cartesActives = cartes.Count(c => c.IsActive);
            cartesBloquees = cartes.Count(c => c.Statut == "BLOQUEE");
            cartesExpirees = cartes.Count(c => c.IsExpired);
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Erreur lors du chargement des cartes: {ex.Message}");
