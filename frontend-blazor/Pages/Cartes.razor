    }

    private async Task ConfirmerOpposition()
    {
        if (carteSelectionnee == null || string.IsNullOrEmpty(motifOpposition)) return;

        try
        {
            isSaving = true;

            var request = new OppositionCarteRequest
            {
                Motif = motifOpposition,
                CommanderNouvelleCarte = commanderNouvelleCarte
            };

            var result = await CarteService.MettreEnOppositionAsync(carteSelectionnee.Id, request);

            if (result != null)
            {
                carteSelectionnee = result;
                ToastService.ShowSuccess("Opposition enregistrée avec succès");
                FermerModalOpposition();
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Erreur: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

