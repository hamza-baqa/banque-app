@page "/"
@attribute [Authorize]
@inject ICompteService CompteService
@inject IVirementService VirementService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Tableau de bord - EuroBank</PageTitle>

<div class="dashboard">
    <!-- En-tête avec salutation -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="welcome-banner p-4 rounded-3 text-white">
                <h1 class="h3 mb-2">
                    <i class="fas fa-hand-sparkles me-2"></i>
                    Bonjour, <AuthorizeView><Authorized>@context.User.Identity?.Name</Authorized></AuthorizeView>
                </h1>
                <p class="mb-0 opacity-75">Bienvenue sur votre espace bancaire sécurisé</p>
            </div>
        </div>
    </div>
    
    <!-- Cartes de synthèse -->
    <div class="row g-4 mb-4">
        <!-- Solde global -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-primary-subtle text-primary rounded-3 p-3 me-3">
                            <i class="fas fa-wallet fa-lg"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">Solde Global</h6>
                        </div>
                    </div>
                    @if (isLoading)
                    {
                        <div class="placeholder-glow">
                            <span class="placeholder col-8 placeholder-lg"></span>
                        </div>
                    }
                    else
                    {
                        <h3 class="mb-0 fw-bold text-primary">@soldeGlobal.ToString("N2") €</h3>
                    }
                </div>
            </div>
        </div>
        
        <!-- Nombre de comptes -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-success-subtle text-success rounded-3 p-3 me-3">
                            <i class="fas fa-university fa-lg"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">Mes Comptes</h6>
                        </div>
                    </div>
                    <h3 class="mb-0 fw-bold">@comptes.Count</h3>
                    <small class="text-muted">comptes actifs</small>
                </div>
            </div>
        </div>
        
        <!-- Dernière opération -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-info-subtle text-info rounded-3 p-3 me-3">
                            <i class="fas fa-exchange-alt fa-lg"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0">Dernière Opération</h6>
                        </div>
                    </div>
                    @if (derniereTransaction != null)
                    {
                        <p class="mb-0 fw-semibold @(derniereTransaction.IsCredit ? "text-success" : "text-danger")">
                            @derniereTransaction.MontantFormate
                        </p>
                        <small class="text-muted">@derniereTransaction.DateOperation.ToString("dd/MM/yyyy")</small>
                    }
                    else
                    {
                        <p class="mb-0 text-muted">Aucune opération</p>
                    }
                </div>
            </div>
        </div>
        
        <!-- Actions rapides -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm bg-gradient-primary text-white">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h6 class="mb-3">Actions rapides</h6>
                    <div class="d-grid gap-2">
                        <button class="btn btn-light btn-sm" @onclick='() => Navigation.NavigateTo("/virements")'>
                            <i class="fas fa-paper-plane me-1"></i> Nouveau virement
                        </button>
                        <button class="btn btn-outline-light btn-sm" @onclick='() => Navigation.NavigateTo("/historique")'>
                            <i class="fas fa-history me-1"></i> Historique
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Liste des comptes -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-university me-2 text-primary"></i>
                            Mes Comptes
                        </h5>
                        <a href="/comptes" class="btn btn-sm btn-outline-primary">Voir tout</a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Chargement...</span>
                            </div>
                        </div>
                    }
                    else if (!comptes.Any())
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-inbox fa-3x mb-3"></i>
                            <p>Aucun compte trouvé</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Compte</th>
                                        <th>Type</th>
                                        <th class="text-end">Solde</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var compte in comptes.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@compte.Intitule</div>
                                                <small class="text-muted">@compte.IbanFormate</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary-subtle text-secondary">
                                                    @compte.TypeCompteLibelle
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-bold @(compte.Solde >= 0 ? "text-success" : "text-danger")">
                                                    @compte.Solde.ToString("N2") €
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-primary" 
                                                        @onclick='() => Navigation.NavigateTo($"/comptes/{compte.Iban}")'>
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Dernières transactions -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2 text-primary"></i>
                        Dernières opérations
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (dernieresTransactions.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var transaction in dernieresTransactions.Take(5))
                            {
                                <li class="list-group-item px-3 py-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="fw-semibold small">@transaction.Libelle</div>
                                            <small class="text-muted">@transaction.DateOperation.ToString("dd/MM/yyyy")</small>
                                        </div>
                                        <span class="badge @(transaction.IsCredit ? "bg-success" : "bg-danger")">
                                            @transaction.MontantFormate
                                        </span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <p class="small mb-0">Aucune opération récente</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<CompteResumeDto> comptes = new();
    private List<TransactionDto> dernieresTransactions = new();
    private TransactionDto? derniereTransaction;
    private decimal soldeGlobal = 0;
    private bool isLoading = true;
    
    // ID client simulé (à récupérer du contexte d'authentification en production)
    private long clientId = 1;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Charger les comptes
            comptes = await CompteService.GetComptesClientAsync(clientId);
            soldeGlobal = comptes.Sum(c => c.Solde);
            
            // Charger les dernières transactions du premier compte
            if (comptes.Any())
            {
                var historiqueRequest = new HistoriqueRequest
                {
                    Iban = comptes.First().Iban,
                    Page = 0,
                    Taille = 5
                };
                
                var historique = await VirementService.GetHistoriqueAsync(historiqueRequest);
                dernieresTransactions = historique.Content;
                derniereTransaction = dernieresTransactions.FirstOrDefault();
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Erreur lors du chargement des données");
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }
}

<style>
    .welcome-banner {
        background: linear-gradient(135deg, #1a365d 0%, #2c5282 50%, #3182ce 100%);
    }
    
    .icon-box {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .bg-gradient-primary {
        background: linear-gradient(135deg, #2c5282 0%, #3182ce 100%);
    }
    
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
    }
</style>
