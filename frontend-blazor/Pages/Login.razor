@page "/login"
@layout LoginLayout
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Connexion - EuroBank</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <img src="/images/logo-eurobank.svg" alt="EuroBank" class="login-logo" onerror="this.style.display='none'" />
            <h1 class="h3 mb-1 fw-bold text-primary">EuroBank</h1>
            <p class="text-muted">Espace Client Sécurisé</p>
        </div>
        
        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin" class="login-form">
            <DataAnnotationsValidator />
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@errorMessage
                    <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                </div>
            }
            
            @if (requireOtp)
            {
                <div class="alert alert-info">
                    <i class="fas fa-shield-alt me-2"></i>
                    Authentification forte requise. Veuillez saisir le code reçu par SMS.
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Code de vérification</label>
                    <InputText @bind-Value="loginModel.CodeOtp" class="form-control form-control-lg text-center" 
                               placeholder="000000" maxlength="6" />
                </div>
            }
            else
            {
                <div class="mb-3">
                    <label class="form-label">Identifiant</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <InputText @bind-Value="loginModel.Login" class="form-control form-control-lg" 
                                   placeholder="Votre identifiant" autocomplete="username" />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Login)" class="text-danger small" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Mot de passe</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <InputText type="@(showPassword ? "text" : "password")" @bind-Value="loginModel.MotDePasse" 
                                   class="form-control form-control-lg" placeholder="Votre mot de passe" 
                                   autocomplete="current-password" />
                        <button type="button" class="btn btn-outline-secondary" @onclick="TogglePassword">
                            <i class="fas @(showPassword ? "fa-eye-slash" : "fa-eye")"></i>
                        </button>
                    </div>
                    <ValidationMessage For="@(() => loginModel.MotDePasse)" class="text-danger small" />
                </div>
                
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" @bind="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                </div>
            }
            
            <button type="submit" class="btn btn-primary btn-lg w-100" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Connexion en cours...</span>
                }
                else
                {
                    <i class="fas fa-sign-in-alt me-2"></i>
                    <span>Se connecter</span>
                }
            </button>
        </EditForm>
        
        <div class="login-footer">
            <a href="/mot-de-passe-oublie" class="text-decoration-none">Mot de passe oublié ?</a>
            <hr />
            <p class="text-muted small mb-0">
                <i class="fas fa-shield-alt me-1"></i>
                Connexion sécurisée SSL 256 bits
            </p>
        </div>
    </div>
</div>

@code {
    private LoginRequest loginModel = new();
    private bool isLoading = false;
    private bool showPassword = false;
    private bool rememberMe = false;
    private bool requireOtp = false;
    private string? errorMessage;

    private void TogglePassword() => showPassword = !showPassword;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            var response = await AuthService.LoginAsync(loginModel);
            
            if (response != null)
            {
                if (response.DeuxFacteursRequis)
                {
                    requireOtp = true;
                    ToastService.ShowInfo("Code de vérification envoyé par SMS");
                }
                else
                {
                    ToastService.ShowSuccess($"Bienvenue, {response.Utilisateur?.NomComplet}");
                    Navigation.NavigateTo("/", true);
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            ToastService.ShowError(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }
}

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #1a365d 0%, #2c5282 50%, #3182ce 100%);
        padding: 20px;
    }
    
